@model XBoxRentals.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "Customer Form";
}

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="container">
        <div class="row">
            <div class="col-xs-8">
                        <h3>@Model.Title</h3>
                        <div class="row">
                            <div class="col-xs-8">
                                <div class="form-group">
                                    @Html.LabelFor(c => c.Name)
                                    @Html.TextBoxFor(c => c.Name, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(c => c.Name)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(c => c.BirthDate)
                                    <div id="datepicker" class="input-group date">
                                        @Html.TextBoxFor(c => c.BirthDate, new {@class = "form-control", @id = "datepicker-value"})
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                    @Html.ValidationMessageFor(c => c.BirthDate)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.MembershipTypeId)
                                    @Html.DropDownListFor(m => m.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select a membership type...", new {@class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.MembershipTypeId)
                                </div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(m => m.IsSubscribedToEmail) Subscribed to Newsletter?
                                    </label>
                                </div>
                            </div>
                        </div>
                        @Html.HiddenFor(c => c.Id)
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
}

@section scripts
{
    <script type="text/javascript">
        $(function () {
            $('#datepicker').datetimepicker({
                format: "MMM DD YYYY"
            });

            var date = "@Model.BirthDate.ToString("MMM dd yyyy")";

            if (date !== "Jan 01 0001")
                $('#datepicker-value').val(date);
        });

    </script>
}

