@model dynamic

@{
    ViewBag.Title = "New Rental";
}

<h2>New Rental</h2>
<form id="newRental">
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input 
                   id="customer"
                   name="customer"
                   type="text"
                   value=""
                   class="form-control"
                   required
                   data-rule-validCustomer="true"/>
        </div>
    </div>

    <div class="form-group">
        <label>Game</label>
        <div class="tt-container">
            <input
                id="game"
                name="game"
                type="text"
                value=""
                class="form-control"
                data-rule-atLeastOneGame="true"/>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4">
            <ul id="games" class="list-group"></ul>
        </div>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {

            var viewModel = {
                gameIds: []
            };

            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#customer').typeahead({
                minLength: 2,
                highlight: true
            }, {
                name: 'customers',
                display: 'name',
                source: customers
            }).on("typeahead:select", function(e, customer) {
                viewModel.customerId = customer.id;
            });

            var games = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/games?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#game').typeahead({
                minLength: 2,
                highlight: true
            }, {
                name: 'games',
                display: 'name',
                source: games
            }).on("typeahead:select", function (e, game) {
                $("#games").append("<li class='list-group-item'>" + game.name + "</li>");

                $("#game").typeahead("val", "");

                viewModel.gameIds.push(game.id);
            });

            $.validator.addMethod("validCustomer", function () {
                return viewModel.customerId && viewModel.customerId !== 0;
            }, "Please select a valid customer.");

            $.validator.addMethod("atLeastOneGame", function () {
                return viewModel.gameIds.length > 0;
            }, "Please select at least one game.");

            var validator = $("#newRental").validate({
                submitHandler: function () {
                    $.ajax({
                        url: "/api/rentals",
                        method: "post",
                        data: viewModel
                    })
                    .done(function () {
                        toastr.success("Game rentals successfully recorded.");

                        $("#customer").typeahead("val", "");
                        $("#game").typeahead("val", "");
                        $("#games").empty();

                        viewModel = { gameIds: [] };

                        validator.resetForm();
                    })
                    .fail(function () {
                        toastr.error("An error occurred.");
                    });

                    return false;
                }
            });
        });
    </script>
}